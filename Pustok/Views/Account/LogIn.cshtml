@model MemberRegisterViewModel
@{
    ViewData["Title"] = "LogIn";
}
    <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12 mx-auto">
        <form action="login" method="post">
            <div class="login-form">
                <h4 class="login-title">Returning Customer</h4>
                <p><span class="font-weight-bold">I am a returning customer</span></p>
                <div class="row">
                    <div class="col-12 mb--20">
                        <label asp-for="Email">Email</label>
                        <input class="mb-0 form-control" type="email" asp-for="Email" placeholder="Enter your Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-12 mb--20">
                        <label asp-for="Password">Password</label>
                        <input class="mb-0 form-control" type="password" asp-for="Password" placeholder="Enter your password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-outlined">Login</button>
                    </div>
                </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </form>
    </div>
