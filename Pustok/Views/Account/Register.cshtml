@model MemberRegisterViewModel
@{
    ViewData["Title"] = "Index";
}

<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0 mx-auto">
                <!-- Login Form s-->
                <form asp-action="register" method="post">
                    <div class="login-form">
                        <h4 class="login-title">New Customer</h4>
                        <p><span class="font-weight-bold">I am a new customer</span></p>
                        <div class="row">
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="FullName">Full Name</label>
                                <input class="mb-0 form-control" asp-for="FullName"
                                       placeholder="Enter your full name">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="UserName">UserName</label>
                                <input class="mb-0 form-control" asp-for="UserName"
                                       placeholder="Enter your UserName">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="col-12 mb--20">
                                <label asp-for="Email">Email</label>
                                <input class="mb-0 form-control" asp-for="Email" placeholder="Enter Your Email Address Here..">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 mb--20">
                                <label asp-for="Password">Password</label>
                                <input class="mb-0 form-control" type="password" asp-for="Password" placeholder="Enter your password">
                            </div>
                            <div class="col-lg-6 mb--20">
                                <label asp-for="RepeatPassword">Repeat Password</label>
                                <input class="mb-0 form-control" type="password" asp-for="RepeatPassword" placeholder="Repeat your password">
                                <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger mx-auto" style="margin-top:-42px"></div>
                            <div class="col-md-12">
                                <button  type="submit" class="btn btn-outlined">Register</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
@section Scripts{
    @await Html.PartialAsync("_ValidationViewPartial")
}