@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot";
}

<div class="col-sm-12 col-md-12 col-lg-6 col-xs-12 mx-auto">
    <form asp-action="forgot" method="post">
        <div class="login-form">
            <h4 class="login-title">Reset Password</h4>
            <div class="row">
                <div class="col-12 mb--20">
                    <label asp-for="Email">Email</label>
                    <input class="mb-0 form-control" type="email" asp-for="Email" placeholder="Enter your Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-outlined">Send Email</button>
                </div>
            </div>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>

