@model ResetPasswordViewModel
<div class="col-sm-12 col-md-12 col-lg-6 col-xs-12 mx-auto">
    <form action="login" method="post">
        <div class="login-form">
            <h4 class="login-title">Change Password</h4>
            <div class="row">
                <input type="hidden" name="token" value="@Model.Token" />
                <input type="hidden" name="email" value="@Model.Email" />
                <div class="col-12 mb--20">
                    <label asp-for="Password">Password</label>
                    <input class="mb-0 form-control" type="password" asp-for="Password" placeholder="Enter your password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-12 mb--20">
                    <label asp-for="ConfirmPassword">ConfirmPassword</label>
                    <input class="mb-0 form-control" type="password" asp-for="ConfirmPassword" placeholder="Enter your ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-outlined">Login</button>
                </div>
            </div>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>
