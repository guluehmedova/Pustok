@model MemberProfilViewModel

<div class="myaccount-content">
    <h3>Account Details</h3>
    <div class="account-details-form">
        <form asp-action="profil" method="post">
            <div class="row">
                <div class="col-lg-6 col-12  mb--30">
                    <input asp-for="FullName" placeholder="First Name" type="text">
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
                <div class="col-lg-6 col-12  mb--30">
                    <input asp-for="UserName" placeholder="UserName" type="text">
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
                <div class="col-lg-6 col-12  mb--30">
                    <input asp-for="Email" placeholder="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="col-12  mb--30">
                    <h4>Password change</h4>
                </div>
                <div class="col-12  mb--30">
                    <input asp-for="NewPassword" id="current-pwd" placeholder="new Password"
                           type="password">
                    <span class="text-danger" asp-validation-for="NewPassword"></span>

                </div>
                <div class="col-lg-6 col-12  mb--30">
                    <input asp-for="ConfirmNewPassword" id="new-pwd" placeholder="confirm Password"
                           type="password">
                    <span class="text-danger" asp-validation-for="ConfirmNewPassword"></span>

                </div>
                <div class="col-lg-6 col-12  mb--30">
                    <input asp-for="CurrentPassword" id="confirm-pwd" placeholder="current Password"
                           type="password">
                    <span class="text-danger" asp-validation-for="CurrentPassword"></span>

                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="col-12">
                    <button type="submit" class="btn btn--primary">Save Changes</button>
                </div>
            </div>
        </form>
    </div>
</div>