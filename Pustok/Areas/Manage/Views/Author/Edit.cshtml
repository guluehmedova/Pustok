@model Author
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Author Edit</h1>
        </div>
        <div class="col-lg-8">
            <form method="post" asp-action="edit">
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label">FullName</label>
                    <input type="text" class="form-control" asp-for="FullName">
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    @await Html.PartialAsync("_ValidationPartialView")
}