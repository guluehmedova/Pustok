@model Author
@{
    ViewData["Title"] = "Create";
}

<div class="container" style="background-color:darksalmon">
    <div class="row">
        <div class="col-lg-12">
            <h1 style="font-weight:bold">Author Create Page</h1>
        </div>
        <div class="col-lg-8">
            <form method="post" asp-action="create" enctype="multipart/form-data">
                <div class="form-group">
                  
                    <label asp-for="FullName">FullName</label>
                    <input class="form-control" asp-for="FullName" placeholder="Enter Slider RedirectUrl">
                    <span class="text-danger" asp-validation-for="FullName"></span>

                    <label asp-for="ImageFile">Image</label>
                    <input min="0" class="form-control" asp-for="ImageFile" placeholder="Enter Slider Order">
                    <span class="text-danger" asp-validation-for="ImageFile"></span>

                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    @await Html.PartialAsync("_ValidationPartialView")
}