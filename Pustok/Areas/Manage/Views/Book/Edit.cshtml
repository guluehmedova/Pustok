
@{
    ViewData["Title"] = "Edit";
}

@model Book

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Genre Edit</h1>
        </div>
        <div class="col-lg-8 mx-auto">
            <form method="post" asp-action="edit">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Enter Genre Name">
                    <span class="text-danger" asp-validation-for="Name"></span>

                    <label asp-for="CostPrice">CostPrice</label>
                    <input type="text" asp-for="CostPrice" class="form-control" placeholder="Enter Genre CostPrice">
                    <span class="text-danger" asp-validation-for="CostPrice"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationPartialView")
}