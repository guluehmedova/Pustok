@model List<BookComment>
@{
    ViewData["Title"] = "Comments";
    int count = 0;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 style="display:inline-block">Comments</h1>
            <a asp-action="create" style="float:right"></a>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Fullname</th>
                        <th scope="col">Email</th>
                        <th scope="col">BookName</th>
                        <th scope="col">Text</th>
                        <th scope="col">Rate</th>
                        <th scope="col">Status</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (BookComment item in Model)
                    {
                        count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.Book.Name</td>
                        <td>@(item.Text==null || item.Text.Length<=250?item.Text:item.Text.Substring(0,250)+"......")</td>
                        <td>@item.Rate</td>
                        <td><span class="badge badge-@(item.Status?"success":"info")">@(item.Status?"Təsdiqlənib":"Gözləmədədir")</span></td>
                        <td>
                            <a asp-action="infocomment" asp-route-id="@item.Id" class="btn btn-warning">Info Comment</a>
                            <a asp-action="deletecomment" asp-route-id="@item.Id" class="btn btn-danger delete-btn">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


