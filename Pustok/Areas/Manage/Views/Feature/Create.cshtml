@model Feature
@{
    ViewData["Title"] = "Create";
}


<div class="container">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <form method="post" asp-action="create">
                <div class="form-group">
                    <label asp-for="Icon">Icon</label>
                    <input class="form-control" asp-for="Icon" placeholder="Enter Feature Icon">

                    <label asp-for="Text">Text</label>
                    <input class="form-control" asp-for="Text" placeholder="Enter Feature Text">

                    <label asp-for="Title">Title</label>
                    <input class="form-control" asp-for="Title" placeholder="Enter Feature Title">
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>

        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationPartialView")
}
